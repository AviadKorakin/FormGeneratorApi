extends layout
block content
    h1 Update Form
        i.fas.fa-tools(style="margin-left: 10px; color: #3498db;")

    .container-fluid
        .row
            // Form Selector
        .col-md-12
            .form-group
                label(for="form-id") Select Form ID to Update:
                select#form-id.form-control(style="max-width: 350px; display: block; margin-bottom: 10px;")
