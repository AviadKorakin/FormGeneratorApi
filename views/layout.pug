          p &copy; #{new Date().getFullYear()} FormGeneratorApi. All rights reserved.
          ul.footer-links
            li
              a(href="https://www.linkedin.com/in/aviad-korakin-477b78202")
                i.fab.fa-linkedin
            li
              a(href="https://github.com/AviadKorakin/FormGeneratorApi")
                i.fab.fa-github

      div.overlay-git#github-overlay
        i.fab.fa-github.overlay-git-icon

    script.
      async function handleAuth() {
        try {
          console.log('Starting GitHub authentication');
          const overlayIcon = document.querySelector('.overlay-git-icon');

          // Show the overlay and start the pulsing effect
          showGitOverlay();
          overlayIcon.classList.add('pulsing');

          // Simulate the GitHub authentication redirect
          window.location.href = '/users/auth/github';
        } catch (error) {
          console.error('Authentication error:', error);

          // Stop the pulsing effect on error
          const overlayIcon = document.querySelector('.overlay-git-icon');
          overlayIcon.classList.remove('pulsing');

          hideGitOverlay();
        }
      }

      function showGitOverlay() {
        const overlay = document.getElementById('github-overlay');
        overlay.classList.add('active');
      }

      function hideGitOverlay() {
        const overlay = document.getElementById('github-overlay');
        overlay.classList.remove('active');

        const overlayIcon = document.querySelector('.overlay-git-icon');
        overlayIcon.classList.remove('pulsing'); // Stop pulsing when overlay hides
      }




